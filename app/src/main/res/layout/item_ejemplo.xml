<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="16dp"
    android:gravity="top">

    <!-- Icono de comillas -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="?attr/colorPrimaryContainer">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_format_quote"
            app:tint="@android:color/black" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Contenido del ejemplo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Texto del ejemplo en cursiva -->
        <TextView
            android:id="@+id/tv_ejemplo_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ese hombre es una arepa para manejar, casi choca el carro."
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:textStyle="italic"
            android:fontFamily="sans-serif"
            android:lineSpacingMultiplier="1.3" />

        <!-- Significado asociado (cuál definición usa) -->
        <TextView
            android:id="@+id/tv_ejemplo_significado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Individuo torpe"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/bg_significado_tag"
            android:letterSpacing="0.03" />
    </LinearLayout>
</LinearLayout>