<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    android:backgroundTint="?attr/colorSurface">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header con botón cerrar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/iconHelp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_help"
                    android:padding="8dp"
                    android:background="@drawable/circle_accent_background"
                    android:backgroundTint="?attr/colorPrimary"
                    app:tint="@color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iconHelp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="48dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Cómo usar Modistra?"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guía rápida de uso"
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.7"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnCloseHelp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_close"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    app:tint="?attr/colorOnSurface" />
            </RelativeLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorOnSurface"
                android:alpha="0.1"
                android:layout_marginBottom="20dp" />

            <!-- Instrucción 1: Análisis de Texto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_text"
                            app:tint="?attr/colorPrimary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1. Analizar Texto"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Escribe o pega un texto (máximo 400 caracteres) en el campo de texto y presiona 'Analizar Texto'. La IA identificará modismos colombianos y te mostrará su significado."
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.8"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Instrucción 2: Grabar Audio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_microphone"
                            app:tint="?attr/colorPrimary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2. Grabar Audio"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Toca el botón 'Grabar' y di tu frase (máximo 50 segundos). El audio se transcribirá automáticamente y se analizarán los modismos detectados."
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.8"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Instrucción 3: Subir Audio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_upload"
                            app:tint="?attr/colorPrimary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3. Subir Audio"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sube un archivo de audio desde tu dispositivo. Asegúrate de que no supere los 50 segundos de duración."
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.8"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Instrucción 4: Ver Resultados -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_analyze"
                            app:tint="?attr/colorPrimary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4. Ver Resultados"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Los modismos detectados aparecerán resaltados. Alterna entre 'Original' y 'Neutral' para ver la frase con palabras formales. Las palabras nuevas se guardarán en tu diccionario personal."
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.8"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Instrucción 5: Diccionario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="?attr/colorPrimary"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_book"
                            app:tint="?attr/colorPrimary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5. Diccionario Personal"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Todas las palabras que analices se guardarán automáticamente en tu diccionario personal. Accede a él desde el botón 'Diccionario' o la barra de navegación."
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.8"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Botón Entendido -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGotIt"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="¡Entendido!"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:cornerRadius="26dp"
                app:backgroundTint="?attr/colorPrimary"
                app:icon="@drawable/ic_check"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconPadding="8dp" />
        </LinearLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>