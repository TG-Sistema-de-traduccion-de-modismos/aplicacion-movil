<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <!-- Header reutilizado con modificaciones -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/red_gradient_background"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp"
        android:elevation="8dp">

        <!-- Título del diccionario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diccionario"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aquí puedes ver todos los modismos que\nhemos detectado en tus conversaciones."
                android:textColor="?attr/colorOnPrimary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:alpha="0.9"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </RelativeLayout>

    <!-- Contenedor para el contenido principal -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- RecyclerView para la lista de palabras -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_modismos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false"
            android:scrollbars="none" />

        <!-- ProgressBar para mostrar estado de carga -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="@color/red_primary" />

        <!-- Contenedor para estado vacío -->
        <LinearLayout
            android:id="@+id/empty_state_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <!-- Ícono para estado vacío -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_book_outline"
                android:layout_marginBottom="16dp"
                android:alpha="0.6"
                app:tint="?attr/colorOnBackground" />

            <!-- Texto principal del estado vacío -->
            <TextView
                android:id="@+id/tv_empty_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Descubre palabras jugando para llenar tu diccionario!"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"
                android:textAlignment="center"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Texto secundario del estado vacío -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Las palabras que descubras aparecerán aquí con sus significados y sinónimos."
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:textAlignment="center"
                android:gravity="center"
                android:alpha="0.7"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>