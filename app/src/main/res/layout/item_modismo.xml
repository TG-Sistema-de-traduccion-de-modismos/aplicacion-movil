<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardModismo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:animateLayoutChanges="true">

        <!-- Encabezado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvPalabra"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bacano"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:id="@+id/ivExpandIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_expand"
                app:tint="?attr/colorOnSurface"
                android:rotation="0" />
        </LinearLayout>

        <!-- Chip regi贸n -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=" Bogot谩"
            android:textSize="12sp"
            app:chipCornerRadius="8dp"
            app:chipBackgroundColor="?attr/colorSurfaceVariant"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- Contenido expandible -->
        <LinearLayout
            android:id="@+id/llExpandedContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="12dp">

            <!-- Definici贸n -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Definici贸n"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.05" />

            <TextView
                android:id="@+id/tvDefinicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Algo o alguien que es muy bueno, excelente o atractivo."
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp"
                android:lineSpacingExtra="2dp" />


            <!-- Bot贸n de detalles -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Ver m谩s detalles"
                android:textSize="14sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_info"
                app:iconGravity="start"
                app:iconPadding="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:letterSpacing="0.02" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
