<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/red_gradient_background"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp"
        android:elevation="8dp">

        <!-- NUEVO: Botón de ayuda en la esquina superior derecha -->
        <ImageView
            android:id="@+id/btnHelp"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="48dp"
            android:src="@drawable/ic_help"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            app:tint="@color/white"
            android:contentDescription="Ayuda" />

        <!-- Título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conversaciones"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analiza textos y audios con IA"
                android:textColor="?attr/colorOnPrimary"
                android:alpha="0.9"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Contenido -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card Texto -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorOnBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_text"
                            app:tint="?attr/colorPrimary"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Análisis de Texto"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvCharacterCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/400"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:alpha="0.7" />
                    </LinearLayout>

                    <!-- Input con contador -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutTexto"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="¿Qué quieres analizar?"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="?attr/colorPrimary"
                            app:boxStrokeWidth="1dp"
                            app:boxStrokeWidthFocused="2dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:counterEnabled="true"
                            app:counterMaxLength="400"
                            app:counterTextColor="?attr/colorOnSurface"
                            app:counterOverflowTextColor="@color/red_primary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etTexto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="top|start"
                                android:inputType="textCapSentences|textMultiLine"
                                android:maxLength="400"
                                android:padding="16dp"
                                android:paddingEnd="20dp"
                                android:textColor="?attr/colorOnSurface"
                                android:textColorHint="?attr/colorPrimary"
                                android:textSize="16sp"
                                android:lineSpacingExtra="2dp"
                                android:background="@android:color/transparent"
                                android:scrollbars="vertical"
                                android:overScrollMode="always"
                                android:scrollbarStyle="insideInset"
                                android:fadeScrollbars="false" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Botón X flotante superpuesto -->
                        <ImageView
                            android:id="@+id/btnClearText"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="top|end"
                            android:src="@drawable/ic_close"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="6dp"
                            app:tint="?attr/colorOnSurface"
                            android:alpha="0.6"
                            android:visibility="gone"
                            android:contentDescription="Borrar texto" />
                    </FrameLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAnalizarTexto"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="Analizar Texto"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        app:cornerRadius="26dp"
                        app:icon="@drawable/ic_analyze"
                        app:iconGravity="textStart"
                        app:iconSize="20dp"
                        app:iconPadding="8dp"
                        app:backgroundTint="?attr/colorPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Audio -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:backgroundTint="?attr/colorOnBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header de sección con ícono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_audio_wave"
                            app:tint="?attr/colorPrimary"
                            android:layout_marginEnd="12dp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Análisis de Audio"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <!-- Container de audio con diseño glassmorphism -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="@color/red_primary">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/glassmorphism_background"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_marginEnd="60dp">

                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:id="@+id/fabUpload"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_upload"
                                    app:maxImageSize="28dp"
                                    app:backgroundTint="@color/white"
                                    app:tint="?attr/colorPrimary"
                                    app:fabCustomSize="64dp"
                                    app:elevation="6dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Subir"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="8dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:id="@+id/fabMicrophone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_microphone"
                                    app:maxImageSize="28dp"
                                    app:backgroundTint="@color/white"
                                    app:tint="?attr/colorPrimary"
                                    app:fabCustomSize="64dp"
                                    app:elevation="6dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Grabar"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="8dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Reproductor de Audio Compacto (inicialmente oculto) -->
                    <LinearLayout
                        android:id="@+id/audioPlayerCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Header compacto del reproductor -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:id="@+id/tvAudioName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Audio grabado"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <!-- Botón eliminar pequeño -->
                            <ImageView
                                android:id="@+id/btnDelete"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_delete"
                                app:tint="@color/red_primary"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="4dp" />
                        </LinearLayout>

                        <!-- Controles de reproducción compactos -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Botón play/pause pequeño -->
                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/btnPlayPause"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_play"
                                app:maxImageSize="16dp"
                                app:backgroundTint="?attr/colorPrimary"
                                app:tint="@color/white"
                                app:fabCustomSize="32dp"
                                app:elevation="2dp"
                                android:layout_marginEnd="12dp" />

                            <!-- SeekBar y tiempos compactos -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <SeekBar
                                    android:id="@+id/seekBarAudio"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:progressTint="?attr/colorPrimary"
                                    android:thumbTint="?attr/colorPrimary"
                                    android:progressBackgroundTint="@color/gray"
                                    android:max="100"
                                    android:maxHeight="4dp"
                                    android:minHeight="4dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="2dp">

                                    <TextView
                                        android:id="@+id/tvCurrentTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="00:00"
                                        android:textColor="?attr/colorOnSurface"
                                        android:textSize="10sp"
                                        android:fontFamily="monospace" />

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="1dp"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/tvTotalTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="00:00"
                                        android:textColor="?attr/colorOnSurface"
                                        android:textSize="10sp"
                                        android:fontFamily="monospace" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAnalizarAudio"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:backgroundTint="?attr/colorPrimary"
                        android:text="Analizar Audio"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        app:cornerRadius="26dp"
                        app:icon="@drawable/ic_analyze"
                        app:iconGravity="textStart"
                        app:iconSize="20dp"
                        app:iconPadding="8dp"
                        android:elevation="2dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>